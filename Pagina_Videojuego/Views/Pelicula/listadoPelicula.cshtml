@model IEnumerable<Pagina_Videojuego.Models.Producto>

@{
	ViewBag.Title = "listadoPelicula";
	Layout = "~/Views/Shared/_LayoutAdministrador.cshtml";
}

<h2>PRODUCTOS</h2>
<br />

<table class="table">
	<tr>
		<th>
			@Html.DisplayNameFor(model => model.Id)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.Nombre)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.Description)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.TiempoEnvio)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.FechaPub)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.Precio)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.Stock)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.Imagen)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.Categoria)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.Usuario)
		</th>
		<th></th>
	</tr>

	@foreach (var item in Model)
	{
		<tr>
			<td>
				@Html.DisplayFor(modelItem => item.Id)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.Nombre)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.Description)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.TiempoEnvio)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.FechaPub)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.Precio)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.Stock)
			</td>
			<td>
				<img src="@Url.Content(item.Imagen)" width="50" height="70" />
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.Categoria)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.Usuario)
			</td>
			<td>
				@Html.ActionLink(" ", "editarPelicula", new { id = item.Id },
																						new { @class = "glyphicon glyphicon-pencil" })
				@Html.ActionLink(" ", "detallePelicula", new { id = item.Id },
																						new { @class = "glyphicon glyphicon-plus-sign" })
				@Html.ActionLink(" ", "eliminarPelicula", new { id = item.Id },
																								new { @class = "glyphicon glyphicon-trash" })
			</td>
		</tr>
	}

</table>
