<!DOCTYPE html>
<html>
<head>
	<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>@ViewBag.Title - Mi aplicación ASP.NET</title>
	@Styles.Render("~/Content/css")
	@Scripts.Render("~/bundles/modernizr")
</head>
<body>
	<div id="container">
		<br />
		<div id="contenido">
			<div id="banner">

				<nav id="menuArriba">
					<ul class="menu">
						@if (User.Identity.IsAuthenticated)
						{
							<li>@Html.ActionLink("Inicio", "IndexUsuario", "Profile")</li>

							<li>@Html.ActionLink("Productos", "carritoCompras", "Tienda_pelicula")</li>

							<li>@Html.ActionLink("Salir", "Logout", "Home")</li>
						}
					</ul>
				</nav>
			</div>

			<br />

			<!--****** Carrusel******* -->
			<div id="carrusel">
				<div id="myCarousel" class="carousel slide" data-ride="carousel">
					<!-- Indicators -->
					<ol class="carousel-indicators">
						<li data-target="#myCarousel" data-slide-to="0" class="active"></li>
						<li data-target="#myCarousel" data-slide-to="1"></li>
						<li data-target="#myCarousel" data-slide-to="2"></li>
					</ol>

					<!-- Wrapper for slides -->
					<div class="carousel-inner">
						<div class="item imgCarrusel active">
							<img src="~/Images/Gifts/002.gif" alt="Call of Duty" style="        width: 100%; height: 100%
">
						</div>

						<div class="item imgCarrusel">
							<img src="~/Images/Gifts/nier.gif" alt="Battlefield" style="        width: 100%;height: 100%
">
						</div>

						<div class="item imgCarrusel">
							<img src="~/Images/Carrusel/Battlefield_Banner.jpg" alt="Genshin Impact" style="        width: 100%;height: 100%
">
						</div>
						<div class="item imgCarrusel">
							<img src="~/Images/Gifts/003.gif" alt="Battlefield" style=" width: 100%;height: 100%
">
						</div>

						<div class="item imgCarrusel">
							<img src="~/Images/Carrusel/CallOfDuty_Banner.png" alt="Genshin Impact" style="   width: 100%;height: 100%
">
						</div>
					</div>

					<!-- Left and right controls -->
					<a class="left carousel-control" href="#myCarousel" data-slide="prev">
						<span class="glyphicon glyphicon-chevron-left"></span>
						<span class="sr-only">Previous</span>
					</a>
					<a class="right carousel-control" href="#myCarousel" data-slide="next">
						<span class="glyphicon glyphicon-chevron-right"></span>
						<span class="sr-only">Next</span>
					</a>
				</div>
			</div>
			<br />
			@RenderBody()


		</div>
	</div>

</body>
</html>
